{{!-- TODO improve styling of template --}}
<h1>Burgers</h1>
<div>
	<h2>To Eat</h2>
	{{#each burgers}}
		{{#unless this.devoured}}
			<form action="/{{this.id}}?_method=put" method="POST">
				<div>{{this.id}}. {{this.burger_name}} {{> devour-burger}}</div>
			</form>
		{{/unless}}
	{{/each}}
</div>
<div>
	<h2>Devoured</h2>
	{{#each burgers}}
		{{#if this.devoured}}
			<div>{{this.id}}. {{this.burger_name}}</div>
		{{/if}}
	{{/each}}
</div>

